<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
    <!-- <h1>Hare Krishan <%3+4%> </h1>
      -->
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="\create" method="post">
                <input class="block px-5 py-2 bg-zinc-600 w-full rounded-lg outline-none" type="text" placeholder="named the task" name="title"/>
                <textarea class="block px-5 py-2 mt-2 bg-zinc-600 resize-none w-full rounded-lg outline-none" placeholder="describe your task" name="details"></textarea>
                <input class="mt-2 px-5 py-2 bg-blue-600 rounded-md" type="submit" value="create task"/>
            </form>
        </div>

        <div class="tasks px-10 flex gap-3 flex-wrap ">

            <% if(files.length > 0 ) { %>
                <%files.forEach((val)=>{%>
                <div class="task w-72 px-3 py-4 bg-zinc-600 rounded-lg">
                    <h1 class="text-white text-3xl tracking-tighter">
                        <%=val%>
                    </h1>
                    <div class="flex justify-between mt-2">
                        <a class="text-blue-500 inline-block " href="/file/<%=val%>">Read more...</a>
                        <a class="text-zinc-200" href="/edit/<%=val%>">Edit</a>
                    </div>
                </div>
                <%})%>
            <%} else {%>   
                <h1 class="text-zinc-500">no tasks yet...</h1>
            <%}%>
            
        </div>
    </div>
</body>
</html>